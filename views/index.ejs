<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet">
<body>
    <div class="logout">
        <form action="/logout" method="get">
            <button type="submit"><img src="logout.png"></button>
        </form>
    </div>
    <div class="box today">
        <h1><%= username %>'s list</h1>
    </div>
    <div class="box">
        <div>
            <% fullList.forEach(item => { %>
                <form action="/delete" method= "post" class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p><%=item.content%></p>
                </form>
            <% }); %>
        </div>
        <form action="/add" method="post">
            <input type="text" name="newItem" id="item" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>
</body>
</html>